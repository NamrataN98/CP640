<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatWindow">


    <EditText
        android:id="@+id/EditTextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/buttonChat"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="-869dp"
        android:layout_marginBottom="-3dp"
        android:hint="Enter Text" />

    <Button
        android:id="@+id/buttonChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/chatView"
        android:layout_alignEnd="@id/chatView"
        android:layout_alignParentBottom="true"
        android:text="@string/send" />

    <ListView
        android:id="@+id/chatView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonChat"
        android:layout_marginStart="-13dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="-7dp">

    </ListView>

    <FrameLayout
        android:id="@+id/frames"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@id/chatView"></FrameLayout>

</RelativeLayout>